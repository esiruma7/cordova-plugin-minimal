<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.ofe.minimalplugin" version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Minimal Plugin</name>
    <description>Minimal Cordova Plugin for testing echo</description>
    <license>MIT</license>

    <!-- JavaScript interface -->
    <js-module src="www/minimal.js" name="Minimal">
        <clobbers target="Legic"/>
    </js-module>

    <!-- ANDROID -->
    <platform name="android">
        <source-file src="src/android/MinimalPlugin.java"
                     target-dir="src/com/ofe/minimal"/>
    </platform>

    <!-- iOS -->
	<platform name="ios">
			<config-file target="config.xml" parent="/*">
				<feature name="LegicPlugin">
					<param name="ios-package" value="LegicPlugin"/>
				</feature>
			</config-file>

			<header-file src="src/ios/LegicPlugin.h"/>
			<source-file src="src/ios/LegicPlugin.m"/>
		</platform>
</plugin>
